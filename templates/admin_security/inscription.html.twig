{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="flex justify-content items-center mt-20 p-5 rounded bg-green-300">
        {{ form_start(form) }}
        {{ form_row(form.username, { 'attr': { 'placeholder': 'Saisissez votre nom' }, 'label': 'Votre nom' })  }}
        {{ form_row(form.password, { 'attr':  { 'placeholder': 'Saisissez votre mot de passe' }, 'label': 'Votre mot de passe' })  }}
        {{ form_row(form.password_confirmation, { 'attr': { 'placeholder': 'Cofirmer le mot de passe' }, 'label': 'Confirmez le mot de passe' })  }}
        <input type="submit" class="p-3 rounded">
        {{ form_end(form) }}
    </div>
{% endblock %}
