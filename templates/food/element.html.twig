{% extends 'base.html.twig' %}

{% block title %}{{ element.name }}{% endblock %}

{% block body %}
    <div class="flex justify-center items-center mt-10">
        <div class="bg-yellow-100 rounded-xl p-8">
            <h2 class="text-green-500 text-5xl text-center mb-2">{{ element.name }}</h2>
            <div class="flex justify-center items-center mb-3">
                <div class="h-20 w-20 bg-green-500 text-white text-xl rounded-full font-bold p-2 flex justify-center items-center mx-2"><span>{{ element.price }} â‚¬<span></span></div>
                <div class="grid grid-cols-3 mx-2 gap-1">
                    <div class="flex flex-col justify-center items-center bg-green-300 rounded-xl text-white p-1">
                        <span>Calories :</span>
                        <span>{{ element.calories }}</span>
                    </div>
                    <div class="flex flex-col justify-center items-center bg-green-300 rounded-xl text-white p-1">
                        <span>Protein :</span>
                        <span>{{ element.protein }}</span>
                    </div>
                    <div class="flex flex-col justify-center items-center bg-green-300 rounded-xl text-white p-1">
                        <span>Fat :</span>
                        <span>{{ element.fat }}</span>
                    </div>
                </div>
            </div>
            <img src="{{ asset('images/food/'~element.image ) }}" style="width: 300px" class="mx-auto"/>
        </div>
    </div>
{% endblock %}
